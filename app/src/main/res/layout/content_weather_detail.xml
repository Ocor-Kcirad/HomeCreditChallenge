<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_color_black_87_percent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".feature.weatherdetail.WeatherDetailActivity"
    tools:showIn="@layout/activity_weather_detail"
    >

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="@string/label_temperature"
      android:textColor="@color/material_color_white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/MaterialTypography.Regular.Caption"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="@string/label_wind_direction"
      android:textColor="@color/material_color_white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/temperatureTextView"
      style="@style/MaterialTypography.Regular.Caption"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/highestTemperatureTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_arrow_upward"
      android:minWidth="30dp"
      android:textColor="@color/material_color_white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/textView3"
      tools:text="100 °"
      style="@style/MaterialTypography.Regular.Caption"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/lowestTemperatureTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_arrow_downward"
      android:minWidth="20dp"
      android:textColor="@color/material_color_white"
      app:layout_constraintStart_toStartOf="@+id/highestTemperatureTextView"
      app:layout_constraintTop_toBottomOf="@+id/highestTemperatureTextView"
      tools:text="-0°"
      style="@style/MaterialTypography.Regular.Caption"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/windSpeedTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:textColor="@color/material_color_white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      tools:text="Wind Speed: 6 km/h"
      style="@style/MaterialTypography.Regular.Caption"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/pressureTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:textColor="@color/material_color_white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/windSpeedTextView"
      tools:text="Pressure: 1033"
      style="@style/MaterialTypography.Regular.Caption"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/humidityTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:textColor="@color/material_color_white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pressureTextView"
      tools:text="Humidity: 61"
      style="@style/MaterialTypography.Regular.Caption"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/weatherNameTextView"
      android:layout_width="120dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:gravity="right"
      android:maxLines="2"
      android:minLines="2"
      android:textColor="@color/material_color_white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/weatherIconImageView"
      tools:text="Humid and mostly \n cloudy"
      style="@style/MaterialTypography.Regular.Caption"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/temperatureTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:textColor="@color/material_color_white"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      tools:text="100 °"
      style="@style/TextAppearance.AppCompat.Display3"
      />

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/weatherIconImageView"
      android:layout_width="50dp"
      android:layout_height="0dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_rounded_shape_white"
      android:padding="2dp"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/backgrounds/scenic"
      />

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/windDegreeImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      app:layout_constraintBottom_toBottomOf="@+id/textView3"
      app:layout_constraintStart_toEndOf="@+id/textView3"
      app:layout_constraintTop_toTopOf="@+id/textView3"
      app:srcCompat="@drawable/ic_arrow_upward"
      />

</androidx.constraintlayout.widget.ConstraintLayout>